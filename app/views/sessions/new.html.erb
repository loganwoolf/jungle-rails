<section class="sessions-new">

<header class="page-header">
  <h1>Login</h1>
</header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_tag '/login' do %>

        <% if params[:message] %>
          <div class="alert alert-danger">
            <strong>The following errors prevented login:</strong>
            <ul>
              <li>
                <%= params[:message] %>
              </li>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <label>
            Email: <%= text_field_tag :email %>
          </label>
        </div>

        <div class="form-group">
          <label>
            Password: <%= password_field_tag :password %>
          </label>
        </div>
        <%= submit_tag "Submit" %>

      <% end %>
    </div>
  </div>

</section>
